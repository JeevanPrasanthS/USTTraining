package Ticketing;

import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.stream.Collectors;

/**
 * @author ustjavafsdb411
 *
 */
public class TicketMain {

	/**
	 * @param args
	 */
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		List<Ticket> price=new TicketDao().getTicketDetails();
		
		//Map<Integer, List<Double>> amount=price.stream().collect(Collectors.groupingBy(Ticket::getKms,Collectors.mapping(Ticket::getAmount, Collectors.toList())));
		
		Map<Ticket, Double> m=new HashMap<>();
	for(Ticket t:price) {
		
		double amount=5*t.getKms();
		
		m.put(t, amount);
		
	}System.out.println(m);
	List<Ticket> tp=price.stream().filter(n->n.setAmount(n.getKms()*5)).collect(Collectors.toList());
	}
	

}
