package Optional;

import java.util.Arrays;
import java.util.List;
import java.util.stream.IntStream;
import java.util.stream.Stream;

public class PanCard {

	public static void main(String[] args) {
		  String[] strPANNumbers = {
	                "ABC123",
	                "1234ABCD12",
	                "AAAYX0000A",
	                "AAAYY000A0",
	                "AAAGY000AA",
	                "AAAGY00000",
	                "AAAGY0000A"
	        };
	        
	        String strPattern = "^[A-Z]{3}[ABCFGHLJPT][A-Z][0-9]{4}[A-Z]$";
	        
	        for(String strPAN : strPANNumbers) {
	            System.out.println( strPAN + " => " + strPAN.matches(strPattern) );
	        }
	        
	        List<String> list=Arrays.asList(strPANNumbers);
	        
	        boolean valid = Stream.of(list)
	        .flatMapToInt(s -> {
	            if (((CharSequence) s).length() < 0) return IntStream.of(10); // 42 is a '*' char
	            else return ((CharSequence) s).chars();
	            })
	        .mapToObj(i -> (char) i)
	        .allMatch(c -> Character.isLetterOrDigit(c));
	    System.out.println(valid);
	}
}
